<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cyruszhang.cluboard.NewEvent"
    tools:showIn="@layout/activity_new_event">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_event_name"
        android:id="@+id/new_event_name_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_event_name"
        android:layout_below="@id/new_event_name_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_event_desc"
        android:id="@+id/new_event_desc_label"
        android:layout_below="@+id/new_event_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/new_event_desc"
        android:layout_below="@+id/new_event_desc_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_event_location"
        android:id="@+id/new_event_location_label"
        android:layout_below="@id/new_event_desc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="20"
        android:id="@+id/new_event_location"
        android:layout_below="@id/new_event_location_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:id="@+id/new_event_date_label"
        android:onClick="setDate"
        android:layout_below="@+id/new_event_location"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="@string/event_date_label_set"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:id="@+id/new_date_selected"
        android:onClick="setDate"
        android:layout_below="@+id/new_event_location"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/new_event_desc_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:id="@+id/new_event_time_label"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_event_date_label"
        android:layout_marginTop="20dp"
        android:text="@string/event_time_label_set"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:id="@+id/new_time_selected"
        android:onClick="setTime"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/new_date_selected"
        android:layout_toEndOf="@+id/new_event_desc_label"
         />
</RelativeLayout>

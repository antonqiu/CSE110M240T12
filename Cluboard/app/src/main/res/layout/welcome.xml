<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cyruszhang.cluboard.Welcome"
    tools:showIn="@layout/activity_welcome">

    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/club_list_view"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtuser"
        android:layout_marginTop="10dp"
        android:dividerHeight="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addClubBtn"
        android:id="@+id/newClubBtn"
        android:layout_alignTop="@+id/my_bookmark"
        android:layout_toEndOf="@+id/my_bookmark"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bookmark"
        android:id="@+id/my_bookmark"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/club_list_view"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My events"
        android:id="@+id/my_events"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/newClubBtn"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>

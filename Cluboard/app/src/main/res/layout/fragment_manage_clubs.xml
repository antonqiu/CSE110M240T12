<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/manage_clubs_upcoming_event_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:src="@drawable/ic_header_recommend" />

    <TextView
        android:id="@+id/manage_clubs_upcoming_event_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@id/manage_clubs_upcoming_event_icon"
        android:layout_toEndOf="@+id/manage_clubs_upcoming_event_icon"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:text="@string/my_clubs"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/manage_clubs_event_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/manage_clubs_upcoming_event_text"
        android:scrollbars="vertical" />

</RelativeLayout>